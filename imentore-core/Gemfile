  gem 'shoulda-matchers'
  gem 'database_cleaner'
  gem 'cucumber-rails'
  gem 'factory_girl_rails'
  gem 'capybara'
  gem 'capybara-webkit'
  gem 'pry'
  gem 'ruby-debug19'
  gem 'imentore-testing',  path: '../imentore-testing'
