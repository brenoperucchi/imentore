  = addr.input :phone, placeholder: model_class.human_attribute_name(:phone)
- else
  = addr.input :name, disabled:true, placeholder: model_class.human_attribute_name(:name)
  = addr.input :street, disabled:true, placeholder: model_class.human_attribute_name(:street)
  = addr.input :complement, disabled:true, placeholder: model_class.human_attribute_name(:complement)
  = addr.input :city, disabled:true, placeholder: model_class.human_attribute_name(:city)
  = addr.input :country, :collection => countries, :selected=> "BR"
  = addr.input :state, :collection => states, :prompt=> t(:select_state), disabled:true
  = addr.input :zip_code, disabled:true, placeholder: model_class.human_attribute_name(:zip_code)
  = addr.input :phone, disabled:true, placeholder: model_class.human_attribute_name(:phone)