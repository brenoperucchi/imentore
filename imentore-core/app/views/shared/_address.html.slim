- model_class = Imentore::Address
- unless @disabled
  = addr.input :name, hint: "exemplo: casa/escritÃ³rio", placeholder: model_class.human_attribute_name(:name)
  = addr.input :street, placeholder: model_class.human_attribute_name(:street)
  = addr.input :complement, placeholder: model_class.human_attribute_name(:complement)
  = addr.input :city, input_html: {class: 'form-control'}, placeholder: model_class.human_attribute_name(:city)
  = addr.input :country, :collection => countries, :selected=> "BR"
  = addr.input :state, :collection => states, :prompt=> t(:select_state)
