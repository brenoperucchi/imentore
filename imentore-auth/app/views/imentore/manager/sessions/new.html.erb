<h2><%= t(:admin_sign_in_title) %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => manager_session_path) do |f| %>
  <div class="inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    <%= f.input :store_id, as: :hidden, :required => false, input_html:{value: "0"} %>
  </div>

  <div class="actions">
    <%= f.button :submit, t(:sign_in) %>
  </div>
<% end %>