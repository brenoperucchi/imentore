.container
  .row
    /! **********************
    /! I N T R O
    /! **********************
    #intro
      #intro_wrap
        .container_12
          #breadcrumbs.grid_12
            a href="/cart"  Carrinho
            '
            | &gt;
            '
            a href=address_checkout_path 
              | EndereÃ§o
            '
            | &gt;
            '
            a href=""  Pagamento
          h1 Pagamento
    /! end of intro

    table.table.table-striped.table-bordered.table-condensed
      thead
        tr
          th= t(:product)
          th= t(:variant)
          th= t(:quantity)
          th= t(:price)
          th= t(:amount)
      tbody
        - @order.items.each do |item|
          tr
            td
              = "#" + item.product.id.to_s
              '
              = item.product.name
            td
              - item.variant.options.each do |type|
                = "#" + type.product_variant_id.to_s
                '
                = "#{type.option_type.name}: #{type.value}"
                = " | "
            td= item.quantity
            td= number_with_price(item.value)
            td= number_with_price(item.amount)
        tr
          td &nbsp
          td &nbsp
          td(colspan='2' style='text-align:center;')
            '
            = t(:sub_total)
          td#sub_total
            = number_with_price(current_cart.amount)
        tr
          td &nbsp
          td &nbsp
          td(colspan='2' style='text-align:center;')
            = t(:shipping_value)
          td#shipping_value
            | 0
        tr
          td &nbsp
          td &nbsp
          td(colspan='2' style='text-align:center;')
            = t(:coupon_value)
          td#coupon_value
            = number_with_price(current_cart.coupons_amount)
        tr
          td &nbsp
          td &nbsp
          td(colspan='2' style='text-align:center;')
            h3= t(:total)
          td#total_amount
            h4= number_with_price(@order.total_amount)

  .row
    = simple_form_for(@order, url: confirm_checkout_path, :html => {:class => 'form-horizontal', :method => 'put' }) do |f|
      = hidden_field_tag :zip_code, f.object.try(:zip_code)
      #accordion1.accordion
        .accordion-group
          #collapseThree.accordion-body.collapsy
            .accordion-inner
              .span12
                .row
                  .span5
                    fieldset#payment-method
                      = f.simple_fields_for :invoice, f.object.invoice do |inv|
                        = inv.input :payment_method, label: t(:payment_method), collection: current_store.payment_methods.active, :selected => f.object.invoice.try(:payment_method_id), :prompt => t(:select)
                  .span4
                    fieldset#delivery-method
                      = f.simple_fields_for :delivery, f.object.delivery do |del|
                        = del.input :delivery_method, label: t(:delivery_method), collection: current_store.delivery_methods.active, :selected => f.object.delivery.try(:delivery_method_id), :input_html => { id: 'delivery_method'}, :prompt => t(:select)
                  .span2
                    a(href='#' type='submit' class='btn btn-small' id='calculate_zip')
                      i.icon-refresh
                      '
                      = t(:calculate)
                    span#loading

              .clearfix
      .form-actions
        .span2
          - if current_store.config.order_asset
            a(class="btn" data-toggle="modal" href="#orderAssets" class='btn btn-primary btn-large')
              i.icon-file.icon-white
              '
              = t(:send_files)
        .span3.offset5
          button(class='btn-primary btn-large btn-success')
            i.icon-ok.icon-white
            '
            = t(:finished_order)


