  javascript:
    $(document).ready(function(){


      function calculate_items(){
        var total = 0
        var sub_total = 0
        var shipping = 0
        var coupon = 0
        sub_total = $('td#sub_total').text()
        shipping = $('td#shipping_value').text()
        coupon = $('td#coupon_value').text()
        total = Number(sub_total) + Number(shipping) + Number(coupon)
        $('td#total_amount h4').text(total)
      }
      function delivery_calculate(zip_code, method){
        $.ajax({
          url: '/cart/calculate_shipping',
          type: 'get',
          data: {zip_code:zip_code, method:method},
          dataType: 'json',
          beforeSend: function() {
            $('span#loading').html('<img src="images/site/loading.gif" />');
          },
          success: function(json) {
            $('td#shipping_value').html(json['total_delivery'])
            $('td#coupon_value').html(json['total_coupon'])
            $('td#total_amount').html(json['total_amount'])
          },
          complete: function() {
            $('span#loading').html('');
          }
        })
      }
      if ($('select#delivery_method').find('option:selected').val() != '') {
        var zip_code = $("input[id$='zip_code']").last().val();
        var method = $('select#delivery_method').find('option:selected').val()
        delivery_calculate(zip_code,method)
      }
      // Javascript Notication - Alert/Success
      $('div.alert').each(function(){
        if ( $(this).find('p').text().length > 1 ) {
         $(this).slideDown('slow')
        }
      })
      $('.close').bind('click',function(){
        $(this).parents('div.hide').first().slideUp('slow');
      })
      
      $('input.checkbox').click(function(){
        // var type = $(this).attr('id');
        var value = $(this).val();
        if ( value != 'other' ) {
          $('#order_billing_address_name').val($('#'+value).find('label.hide#name').html());
          $('#order_billing_address_street').val($('#'+value).find('label.hide#street').html());
          $('#order_billing_address_complement').val($('#'+value).find('label.hide#complement').html());
          $('#order_billing_address_city').val($('#'+value).find('label.hide#city').html());
          // $('#order_billing_address_state').val($('label.hide#state').html());
          // $('#order_billing_address_country').val($('label.hide#country').html());
          $('#order_billing_address_zip_code').val($('#'+value).find('label.hide#zip_code').html());
          $('#order_billing_address_phone').val($('#'+value).find('label.hide#phone').html());
          if ( $('input#shipping_address').is(':checked') ){
            $('#order_shipping_address_name').val($('#'+value).find('label.hide#name').html());
            $('#order_shipping_address_street').val($('#'+value).find('label.hide#street').html());
            $('#order_shipping_address_complement').val($('#'+value).find('label.hide#complement').html());
            $('#order_shipping_address_city').val($('#'+value).find('label.hide#city').html());
            // $('#order_shipping_address_state').val($('label.hide#state').html());
            // $('#order_shipping_address_country').val($('label.hide#country').html());
            $('#order_shipping_address_zip_code').val($('#'+value).find('label.hide#zip_code').html());
            $('#order_shipping_address_phone').val($('#'+value).find('label.hide#phone').html());            
          }
        } else {
          $('#order_billing_address_name').val('');
          $('#order_billing_address_street').val('');
          $('#order_billing_address_complement').val('');
          $('#order_billing_address_city').val('');
          // $('#order_billing_address_state').val('');
          // $('#order_billing_address_country').val('');
          $('#order_billing_address_zip_code').val('');
          $('#order_billing_address_phone').val('');
          if ( $('input#shipping_address').val() == 'true' ){
            $('#order_shipping_address_name').val('');
            $('#order_shipping_address_street').val('');
            $('#order_shipping_address_complement').val('');
            $('#order_shipping_address_city').val('');
            // $('#order_shipping_address_state').val('');
            // $('#order_shipping_address_country').val('');
            $('#order_shipping_address_zip_code').val('');
            $('#order_shipping_address_phone').val('');
          }
        }
      })
      $('input#shipping_address').click(function(){
        if ( !$(this).is(':checked')){
          $('#order_shipping_address_name').val('');
          $('#order_shipping_address_street').val('');
          $('#order_shipping_address_complement').val('');
          $('#order_shipping_address_city').val('');
          // $('#order_shipping_address_state').val('');
          // $('#order_shipping_address_country').val('');
          $('#order_shipping_address_zip_code').val('');
          $('#order_shipping_address_phone').val('');
        }else{
          $('#order_shipping_address_name').val($('#order_billing_address_name').val());
          $('#order_shipping_address_street').val($('#order_billing_address_street').val());
          $('#order_shipping_address_complement').val($('#order_billing_address_complement').val());
          $('#order_shipping_address_city').val($('#order_billing_address_city').val());
          // $('#order_shipping_address_state').val($('#order_billing_address_state').val());
          // $('#order_shipping_address_country').val($('#order_billing_address_country').val());
          $('#order_shipping_address_zip_code').val($('#order_billing_address_zip_code').val());
          $('#order_shipping_address_phone').val($('#order_billing_address_phone').val());                    
        }
      })
      $('input#billing_address.checkbox').first().trigger('click')
      $.fn.collapsy = function(option, id) {
        var self = $(this).attr('href');
        if (self == undefined){
          self = id;
        }
        if (self == '#collapseTwo'){
          $('.form-actions.hide').fadeIn('slow');
        }
        switch(option){
          case 'show':
            $(self).slideDown('slow');
            break;
          case 'hide':
            $(self).slideUp('slow');
            break;
          case 'toggle':
            if (!$(self).is(':visible')){
              $(self).slideDown('slow')
            } else {
              $(self).slideUp('slow')
            }
            break
        }
      }
      $('a.accordion-toggle[data-toggle=collapsy]').click(function(e){
        $('.accordion-body.collapsy').slideUp();
        $(this).collapsy('toggle')
        e.preventDefault();
      })
      $('a.next').click(function(e){
        $('#collapseOne').collapsy('hide', '#collapseOne');
        $('#collapseTwo').collapsy('show', '#collapseTwo');
        $('.form-actions.hide').slideDown('slow');
        e.preventDefault();
      })
      $('span.help-inline').each(function(e){
        var id = $(this).parents('.accordion-group').find('a').attr('href')
        $(id).collapsy('show', id);
        $('.form-actions.hide').show();
      })
      
      var key = $.session.get('delivery_method_id');
      if (key != null){
        $('select#delivery_method').find('option[value='+key+']').attr('selected', true)
      }
      $('a#calculate_zip').click(function(e){
        var zip_code = $("input[id$='zip_code']").last().val();
        var method = $('select#delivery_method').find('option:selected').val()
        delivery_calculate(zip_code,method)
        e.preventDefault();
      })
      $('select#delivery_method').change(function(){
        var zip_code = $("input[id$='zip_code']").last().val();
        var method = $('select#delivery_method').find('option:selected').val();
        delivery_calculate(zip_code,method)
      })
    })

