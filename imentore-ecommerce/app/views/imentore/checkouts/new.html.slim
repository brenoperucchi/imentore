  = stylesheet_link_tag    "cart"
  = javascript_include_tag "cart"
  css:
    label.inline {
      display: inline-block;
      padding-top: 5px;
      margin-bottom: 0;
      vertical-align: middle;
    }
    .fileinput-button input {
      position: absolute;
      top: 0;
      right: 0;
