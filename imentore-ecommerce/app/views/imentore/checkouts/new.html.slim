                = "#" + type.product_variant_id.to_s
                '
                = "#{type.option_type.name}: #{type.value}"
                = " | "
            td= item.quantity
            td= number_with_price(item.price)
            td= number_with_price(item.amount)
        tr
          td &nbsp
          td &nbsp
          td(colspan='2' style='text-align:center;')
            '
