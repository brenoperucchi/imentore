  .row
    = simple_form_for(@order, url: address_checkout_path, :html => {:class => 'form-horizontal', :method => 'put' }) do |f|
      = f.error_notification
      #accordion1.accordion
        fieldset#address_customer
          - current_user.try(:userable).try(:addresses).try(:each) do |addr|
            .info.hide.address[id=addr.name.to_underscore!]
              label.hide#name
                = addr.name
              label.hide#street
                = addr.street
              label.hide#complement
                = addr.complement
              label.hide#city
                = addr.city
              label.hide#state
                = addr.state
              label.hide#country
                = addr.country
              label.hide#zip_code
                = addr.zip_code
              label.hide#phone
                = addr.phone
          .accordion-group
            #collapseOne.accordion-body.in.collapsy[style="height: auto; "]
              .accordion-inner
                .span12
                  .row
                    .span6
                      = f.input :customer_name, hint: "* nome completo", input_html: { value: current_user.try(:userable).try(:name) }
                    .span6
                      = f.input :customer_email, input_html: { value: current_user.try(:email) }
              .span12
                .row
                  .span6
                    .address
                      - if user_signed_in? and not current_user.userable.owner?
                        = f.input :billing_checkbox, :as => :radio_buttons, collection: addresses_checkout_helper , input_html: { :class=>'checkbox', id: 'billing_address' }, checked: (f.object.billing_checkbox.nil? ? addresses_checkout_helper.first : f.object.billing_checkbox) if user_signed_in?
                    .address
                      .control-group
                        label.control-label
                          = t(:shipping_address)
                        .controls
                          label.checkbox
                            = check_box_tag 'shipping_address', true
                            = t(:shipping_address_diff)
                .span12.addresses
                  .row
                    .span6#shipping
                      = f.simple_fields_for :shipping_address, f.object.shipping_address do |addr|
                        = render("shared/address", addr: addr)
                    .span6#billing
                      = f.simple_fields_for :billing_address, f.object.billing_address do |addr|
                        = render("shared/address", addr: addr)
              .clearfix
      .form-actions
        .span2
          - if current_store.config.order_asset
            a(class="btn" data-toggle="modal" href="#orderAssets" class='btn btn-primary btn-large')
              i.icon-file.icon-white
              '
              = t(:send_files)
        .span3.offset5
          button(class='btn-primary btn-large btn-success')
            i.icon-ok.icon-white
            '
            = t(:next)


